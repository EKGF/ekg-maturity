\newcommand{\adjustimg}{% Horizontal adjustment of image
  \checkoddpage%
  \ifoddpage\hspace*{\dimexpr\evensidemargin-\oddsidemargin-1pt}\else\hspace*{-\dimexpr\evensidemargin-\oddsidemargin}\fi%
}
\newcommand{\centerimg}[2][width=\textwidth]{% Center an image
  \makebox[\textwidth]{\adjustimg\includegraphics[#1]{#2}}%
}

%
% Import a banner picture and size it across the whole page
%
\newcommand{\bannerAcrossWholePage}[2]{%
  \mbox{} \par%
  \ifoptionfinal{% final mode without TODOs so different right margin
    \noindent\centerimg[width=\dimexpr\paperwidth+3pt\relax,height=#1]{#2}%
  }{% draft mode
    \noindent\centerimg[width=\dimexpr\paperwidth+17pt\relax,height=#1]{#2}%
  }%
}

