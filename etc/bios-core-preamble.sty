}
}

% Double column header
\newcommand{\doublecol}[6]{%
\begin{tabular*}{\textwidth}{l@{\extracolsep{\fill}}r}%
{%
\begin{tabular}[c]{l}
\fontsize{35}{45}\selectfont{\color{primary}{{1\textbf{\fullname}}}} \\
{2\textit{\subtitle}} % You could add a subtitle here
\end{tabular}
} & {
\begin{tabular}[c]{l@{\hspace{1.5em}}l}
{a\small#4} & {d\small#1} \\
{b\small#5} & {e\small#2} \\
{c\small#6} & {f\small#3}
\end{tabular}
}%
\end{tabular*}
}

% Single column header
\newcommand{\singlecol}[6]{
\begin{tabular*}{\textwidth}{l@{\extracolsep{\fill}}r}
{
\begin{tabular}[b]{l}
\fontsize{35}{45}\selectfont{\color{primary}{{\textbf{\fullname}}}} \\
{\textit{\subtitle}} % You could add a subtitle here
\end{tabular}
} & {
\begin{tabular}[c]{l}
{\small#1} \\
{\small#2} \\
{\small#3} \\
{\small#4} \\
{\small#5} \\
{\small#6}
\end{tabular}
}
\end{tabular*}
}
