% Entry with title, subheading, date(s), and location
\newcommand{\resumeEntryTSDLX}[4]{
%\vspace{-1pt}
\item[]
\begin{tabu} to \textwidth {|X|X|} \hline
\textbf{\color{primary}AAAA} & \multirowcell{5}[1ex][r]{{\firabook\color{accent}\small BBBB}\newline\textit{\color{accent}\small DDDD}} \\%
