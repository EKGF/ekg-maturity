!option handwritten true
!define BG_MAIN_COLOR      #4051b5
!define BG_SECONDARY_COLOR #4051b5
!define BG_PACKAGE_COLOR   #4051b5
!define BORDER_COLOR       #ff6f00
!define FONT_COLOR         #ffffff
!define ARROW_COLOR        #ff6f00

skinparam backgroundColor transparent

' Compact layout settings
skinparam Padding 2
skinparam RoundCorner 6
skinparam Shadowing false
skinparam HyperlinkUnderline true
skinparam HyperlinkColor #ff6f00
skinparam ranksep 40
skinparam nodesep 30

skinparam Default {
  FontName "Roboto"
  FontColor FONT_COLOR
  FontSize 13
}

skinparam Arrow {
  Color ARROW_COLOR
  FontColor #ffffff
  FontStyle normal
  Thickness 2
}

skinparam class {
  BackgroundColor BG_MAIN_COLOR
  BorderColor BORDER_COLOR
  BorderThickness 2
  FontColor FONT_COLOR
  AttributeFontColor FONT_COLOR
  ArrowColor ARROW_COLOR
  ArrowThickness 2
}

skinparam package {
  FontColor #ffffff
  BackgroundColor #1e1e1e
  BorderColor BORDER_COLOR
}

skinparam state {
  BackgroundColor BG_MAIN_COLOR
  FontColor FONT_COLOR
  AttributeFontColor FONT_COLOR
  ArrowColor ARROW_COLOR
  BorderColor BORDER_COLOR
  BorderThickness 2
  StartColor #ffffff
  EndColor #ffffff
}

' Explicitly set start/end state colors for visibility in dark mode
skinparam StateStartColor #ffffff
skinparam StateEndColor #ffffff
skinparam StateStartBackgroundColor #ffffff
skinparam StateEndBackgroundColor #ffffff
skinparam StateStartBorderColor #ffffff
skinparam StateEndBorderColor #ffffff
skinparam StateStartFillColor #ffffff
skinparam StateEndFillColor #ffffff

' Note styling - must come after Default to override
skinparam note {
  FontColor #000000
  BackgroundColor #FFFFCC
  BorderColor #ff6f00
}
skinparam noteFontColor #000000
